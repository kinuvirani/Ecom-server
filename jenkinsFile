pipeline {
    agent any
    environment {
        DOCKER_REGISTRY = 'index.docker.io/v1' // Replace with your Docker registry URL
        IMAGE_NAME = 'vkiran12/flipkart-backend'       // Replace with your Docker image name
        TAG = 'testing-v1'                           // Replace with your desired tag/version
    }

    stages {
        stage('Checkout') {
          steps {
            checkout scm
          }
        }

        stage('Docker Login') {
          steps {
            script {
              docker.withRegistry("${DOCKER_REGISTRY}", 'docker-creds') {
                docker.login()
              }
            }
          }
        }

        stage('Docker Build') {
      steps {
        script {
          docker.build("${DOCKER_REGISTRY}/${IMAGE_NAME}:${TAG}")
        }
      }
        }

        stage('Docker Push') {
      steps {
        script {
          docker.withRegistry("${DOCKER_REGISTRY}") {
            docker.image("${DOCKER_REGISTRY}/${IMAGE_NAME}:${TAG}").push()
          }
        }
      }
        }
    }
}
